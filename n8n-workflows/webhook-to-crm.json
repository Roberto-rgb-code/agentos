{
  "name": "WhatsApp Webhook â†’ CRM Lead",
  "nodes": [
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "whatsapp-lead",
        "responseMode": "responseNode",
        "options": {}
      },
      "id": "webhook-node",
      "name": "Webhook WhatsApp",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 2,
      "position": [250, 300]
    },
    {
      "parameters": {
        "jsCode": "// Extraer datos del webhook de WhatsApp\nconst body = $input.first().json.body || $input.first().json;\n\nconst output = {\n  origen: 'WHATSAPP',\n  lead_data: {\n    name: body.name || body.profile_name || body.from || 'Sin nombre',\n    phone: body.phone || body.from || body.wa_id || '',\n    email: body.email || '',\n    ciudad: body.city || body.ciudad || '',\n    interes: body.message || body.text || body.interes || 'Consulta via WhatsApp',\n    etapa: 'NUEVO_CLIENTE',\n    mensaje: body.message || body.text || ''\n  }\n};\n\nreturn [{ json: output }];"
      },
      "id": "code-node",
      "name": "Procesar Datos",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [470, 300]
    },
    {
      "parameters": {
        "method": "POST",
        "url": "http://host.docker.internal:3001/api/crm/webhook/incoming",
        "sendHeaders": true,
        "headerParameters": {
          "parameters": [
            {
              "name": "Content-Type",
              "value": "application/json"
            }
          ]
        },
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={{ JSON.stringify($json) }}",
        "options": {}
      },
      "id": "http-node",
      "name": "Crear Lead en CRM",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [690, 300]
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={{ JSON.stringify({ success: true, lead: $json }) }}",
        "options": {}
      },
      "id": "response-node",
      "name": "Responder OK",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1,
      "position": [910, 300]
    }
  ],
  "connections": {
